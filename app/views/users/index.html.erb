<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>User_type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if user.user_type.in?([2]) %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= type(user.user_type) %></td>
            <td><%= link_to 'Bookings', user_bookings_path(user) %></td>
            <td><%= button_to 'Edit', edit_user_path(user), method: :get %></td>
            <td><%= button_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New User', new_user_path , {:style=>'color:blue;', :class => "css_class"}%>
