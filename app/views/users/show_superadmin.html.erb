<p id="notice"><%= notice %></p>

<h1>Admins</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>User_type</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <% if user.user_type.in?([0]) %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= type(user.user_type) %></td>
            <td><%= button_to 'Edit', edit_user_path(user), method: :get %></td>
            <% if user != current_user && user.user_type != 0 %>
                <td><%= button_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
      <% end %>
  <% end %>
  </tbody>
</table>

<br>

